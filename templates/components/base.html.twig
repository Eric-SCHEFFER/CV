<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{% block title %}Welcome!{% endblock %}</title>

    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link
        href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&display=swap"
        rel="stylesheet">

    <link rel="stylesheet" href="{{ asset('css/base.css') }}">
    <link rel="stylesheet" href="{{ asset('css/entete.css') }}">
    <link rel="stylesheet" href="{{ asset('css/navbar.css') }}">
    <link rel="stylesheet" href="{{ asset('css/footer.css') }}">

    {% block stylesheets %}
    {% endblock %}
</head>

<body>
    <div class="header-main-container">
        <header>
            {% include 'components/entete.html.twig' %}
        </header>
        
        <nav>
            {% include 'components/navbar.html.twig' %}
        </nav>

        <main>
            {% for message in app.flashes('succes') %}
            <div class="conteneurMessageFlash">
                <div class="messageFlash">
                    {{ message }}
                </div>
            </div>
            {% endfor %}
            {% for message in app.flashes('error') %}
            <div class="conteneurMessageFlash">
                <div class="messageFlash messageFlash-alert">
                    {{ message }}
                </div>
            </div>
            {% endfor %}
            {% block body %}{% endblock %}
        </main>
    </div>

    <footer>
        {% include 'components/footer.html.twig' %}
    </footer>
    {% block javascripts %}{% endblock %}
</body>

</html>